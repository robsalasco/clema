library(jsonlite)
library(usethis)

tmp = tempdir()
url="https://raw.githubusercontent.com/explosion/spaCy/5ca7dd0f9471967a06b989ff8ee331e6954ad17e/spacy/lang/es/lemma_lookup.json"
file = paste0(tmp,"/lemma_lookup.json")
download.file(url, destfile = file)

lemma_dictionary_es_cl <- stack(fromJSON(file,
                                         simplifyVector = TRUE))

use_data(lemma_dictionary_es_cl, internal = FALSE, overwrite = TRUE, compress = "xz")
use_data_raw()

save(lemma_dictionary_es_cl, file="data/lemma_dictionary_es_cl.rda")

lemma_dictionary_es_cl

clema <- function(x) {
  value <- lemma_dictionary_es_cl[match(x, lemma_dictionary_es_cl$ind), ]$values
  return(value)
}
